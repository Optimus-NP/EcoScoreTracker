{
  "version": 2,
  "builds": [
    {
      "src": "api/app.py",
      "use": "@vercel/python",
      "config": { "maxDuration": 60 }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/api/app.py" }
  ],
  "functions": {
    "api/app.py": {
      "excludeFiles": "tests/**"
    }
  },
  "env": { "SESSION_SECRET": "my-session-key" }
}
